<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="in.futurezoom.TestFragmentActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <ToggleButton
            android:id="@+id/bn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Remove"
            android:textOn="Add"
            />


        <ToggleButton
            android:id="@+id/bn_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:textOff="Hide"
            android:textOn="Show"
            />

        <Button
            android:id="@+id/bn_replace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="@string/replace"
            />

        <ToggleButton
            android:id="@+id/bn_detach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:textOff="Detach"
            android:textOn="Attach"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/listcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.5">
    </FrameLayout>


</LinearLayout>
